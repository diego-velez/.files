# Dim screen after 30 seconds
timeout 30 '~/.config/swayidle/idle idle' resume '~/.config/swayidle/idle resume'

# Launch screensaver after 5 minutes
timeout 300 '~/.config/niri/screensaver run' resume '~/.config/niri/screensaver close'

# Lock PC after 15 minutes
timeout 900 '~/.config/niri/screensaver close && swaylock'

# Suspend PC after 30 minutes
timeout 1800 'systemctl suspend'
